<?xml version="1.0" encoding="UTF-8"?>
<manifest>

  <!-- Github remote -->
  <remote  name="github"
           fetch="https://github.com/" />

  <!-- Gitlab remote -->
  <remote  name="gitlab"
           fetch="https://gitlab.com/" />

  <!-- Alternate remote -->
  <remote  name="alternate"
           fetch="https://git.dirtyunicorns.com/DirtyUnicorns/" />

  <!-- DU staging -->
  <remote  name="staging"
           revision="r11x"
           fetch="https://github.com/UnicornioSucio/" />

  <!-- DU REPOS -->

  <!-- General -->
  <project path="bionic" name="android_bionic" remote="staging" />
  <project path="build/make" name="android_build" remote="staging" >
    <copyfile src="core/root.mk" dest="Makefile" />
    <linkfile src="CleanSpec.mk" dest="build/CleanSpec.mk" />
    <linkfile src="buildspec.mk.default" dest="build/buildspec.mk.default" />
    <linkfile src="core" dest="build/core" />
    <linkfile src="envsetup.sh" dest="build/envsetup.sh" />
    <linkfile src="target" dest="build/target" />
    <linkfile src="tools" dest="build/tools" />
  </project>
  <project path="build/soong" name="android_build_soong" remote="staging" >
    <linkfile src="root.bp" dest="Android.bp" />
    <linkfile src="bootstrap.bash" dest="bootstrap.bash" />
  </project>
  <project path="manifest" name="android_manifest" remote="staging" />
  <project path="platform_testing" name="android_platform_testing" remote="staging" />

  <!-- External -->
  <project path="external/guice" name="android_external_guice" remote="staging" />

  <!-- Frameworks -->
  <project path="frameworks/native" name="android_frameworks_native" remote="staging" />

  <!-- Hardware -->
  <project path="hardware/qcom/sdm845/display" name="android_hardware_qcom_sdm845_display" remote="staging" />
  <project path="hardware/qcom/sm8150/display" name="android_hardware_qcom_sm8150_display" remote="staging" />

  <!-- System -->
  <project path="system/bt" name="android_system_bt" remote="staging" />
  <project path="system/core" name="android_system_core" remote="staging" />
  <project path="system/incremental_delivery" name="android_system_incremental_delivery" remote="staging" />

  <!-- Vendor -->
  <project path="vendor/du" name="android_vendor_du" remote="staging" />
  <project path="vendor/extras" name="android_vendor_extras" remote="staging" />

</manifest>
